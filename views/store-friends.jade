        div.document-subtitles
          div.primary  
            span.name "LEGO System A/S"
          div.category  
            span.name "Adventure"
          div.category  
            span.name "Action & Adventure"         
        h1 3.9
        img(src='/images/star.png' width="20")
        img(src='/images/star.png' width="20")
        img(src='/images/star.png' width="20")
        img(src='/images/star.png' width="20")
